%ul.tickets-actions
  %li= link_to 'Add an new ticket <span class="shortcut">(⌘+⌥+N)</span>'.html_safe, new_project_ticket_path, :class => 'button green'

%ul.tickets-list
  - @tickets.each do |ticket|
    %li.ticket
      %span.drag-mate= link_to image_tag('drag.gif'), '#'
      %span.number-container
        %span.number ##{ticket.number}
      %span.description= ticket.description
      %span.buttons
        = link_to image_tag('trash.gif'), '#'

%ul#ui-sorting-helper.tickets-list
