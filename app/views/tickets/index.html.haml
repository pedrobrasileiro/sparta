:javascript
  var projectId = #{@project.id};

%ul.tickets-actions
  %li.relative-it= link_to 'Add an new ticket'.html_safe, new_project_ticket_path, :remote => true, :class => 'button green add-ticket menu-popup menu-popup-window bright-green'

.tickets-inbox

- if @tickets[0].class == Array
  - @tickets.each do |ticket|
    - unless ticket[1].empty?
      %h3.tickets-header= ticket[0]
    
      %ul.tickets-list
        - ticket[1].each do |t|
          = render t
- else
  %h3.tickets-header All Tickets
  
  %ul.tickets-list
    - @tickets.each do |ticket|
      = render ticket

%ul#ui-sorting-helper.tickets-list

- content_for :meta_footer do
  tags:
  - @tags.each do |tag|
    = link_to tag.name, project_tickets_path + "?tags=#{tag.name}"    
  

