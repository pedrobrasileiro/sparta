%li.ticket-form
  - semantic_form_for [@project, @ticket], :remote => true do |f|
    - f.inputs do
      = f.input :description, :label => false
      %select{:id => 'ticket_assigned_to_id', :name => 'ticket[assigned_to_id]'}
        - @project.users.each do |user|
          %option{:value => user.id }= user.email
    = f.buttons