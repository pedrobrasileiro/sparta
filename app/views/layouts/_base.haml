!!!5
%html

  %head
    %title Sparta
    %link(rel="shortcut icon" href="/images/favicon.png" type="image/png")
    = stylesheet_link_tag 'master'
    = javascript_include_tag 'jquery-1.4.2.min', 'jquery-ui-1.8.5.custom', 'rails', 'jquery.timeago', 'jquery.hotkeys', 'base'
    = csrf_meta_tag

  %body(id="#{body_id}")
    #root
      = yield :content

      #root-footer

    #footer
      = link_to '<span class="love-panic">Made with Love</span><span class="since">Since 2010</span>'.html_safe, '#', :class => 'made-with-love'

    - if RAILS_ENV == 'production'
      = render 'layouts/google_analytics'
