= form_for([@project, @ticket_status]) do |f|
  - if @ticket_status.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket_status.errors.count, "error")
        prohibited this ticket_status from being saved:
      %ul
        - @ticket_status.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :color
    %br/
    = f.text_field :color
  .field
    = f.label :close
    %br/
    = f.check_box :close
  .actions
    = f.submit
